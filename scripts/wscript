def configure(ctx):
    path = ctx.path.abspath()

    ctx.find_program('flex')
    ctx.find_program('flex.sh', path_list=[path], var='FLEX_SH')
    ctx.find_program('version.sh', path_list=[path], var='VERSION_SH')
