void el_idle_set_hook(el_t ev, el_cb_f *cb)
{
    CHECK_EV_TYPE(ev, EV_IDLE);
    assert (!EV_FLAG_HAS(ev, IS_BLK));
    ev->cb.cb = cb;
}

data_t el_idle_unregister(ev_t **evp)
