static lstr_t ev_type_to_str(ev_type_t type)
{
    switch (type) {
      case EV_UNUSED:   return LSTR("unused");
      case EV_BLOCKER:  return LSTR("blocker");
      case EV_BEFORE:   return LSTR("before loop");
      case EV_SIGNAL:   return LSTR("signal");
      case EV_CHILD:    return LSTR("child");
      case EV_FD:       return LSTR("file desc.");
      case EV_TIMER:    return LSTR("timer");
      case EV_PROXY:    return LSTR("proxy");
      case EV_IDLE:     return LSTR("idle");
      case EV_FS_WATCH: return LSTR("fs watch");
    }
    return LSTR("unknown");
}

static void el_print_state(void)
{
    t_scope;
    qv_t(table_hdr) hdr;
    qv_t(table_data) rows;
    table_hdr_t hdr_data[] = { {
            .title = LSTR_IMMED("EV POINTER"),
        }, {
            .title = LSTR_IMMED("TYPE"),
        }, {
            .title = LSTR_IMMED("CALLBACK"),
        }, {
            .title = LSTR_IMMED("DATA"),
        }, {
            .title = LSTR_IMMED("DETAILS"),
            .omit_if_empty = true,
        }
    };
    uint32_t hdr_size = countof(hdr_data);

    qv_init_static(table_hdr, &hdr, hdr_data, hdr_size);
    t_qv_init(table_data, &rows, 200);

    for (int i = 0; i < _G.evs_len; i++) {
        int bucket_len = 1 << (i + EV_ALLOC_FACTOR);

        for (int j = 0; j < bucket_len; j++) {
            qv_t(lstr) *tab;
            ev_t *ev = &_G.evs[i][j];
            lstr_t details = LSTR_NULL_V;

            if (ev->type == EV_UNUSED || !EV_FLAG_HAS(ev, REFS)) {
                continue;
            }

            tab = qv_growlen(table_data, &rows, 1);
            t_qv_init(lstr, tab, hdr_size);

            qv_append(lstr, tab, t_lstr_fmt("%p", ev));
            qv_append(lstr, tab, ev_type_to_str(ev->type));
            if (ev->flags & EV_FLAG_IS_BLK) {
                qv_append(lstr, tab, LSTR("block"));
            } else {
                qv_append(lstr, tab, t_lstr_fmt("%p", (void *)ev->cb.cb));
            }
            qv_append(lstr, tab, t_lstr_fmt("%p", ev->priv.ptr));

            switch (ev->type) {
              case EV_SIGNAL:
                details = t_lstr_fmt("signal: %d", ev->signo);
                break;
              case EV_CHILD:
                details = t_lstr_fmt("pid: %d", ev->child.pid);
                break;
              case EV_FD:
                details = t_lstr_fmt("fd: %d, events: %04x",
                                     ev->fd, ev->events_wanted);
                break;
              case EV_TIMER:
                if (ev->timer.repeat < 0) {
                    details = t_lstr_fmt("one shot, expiry: %ju)",
                                         ev->timer.expiry / 1000);
                } else {
                    details = t_lstr_fmt("repeat: %dms, next: %ju",
                                         ev->timer.repeat,
                                         ev->timer.expiry / 1000);
                }
                break;
              case EV_PROXY:
                details = t_lstr_fmt("events wanted:%04x, "
                                     "events available: %04x",
                                     ev->events_wanted, ev->events_avail);
                break;
              default:
                break;
            }
            qv_append(lstr, tab, details);
        }
    }

    if (rows.len) {
        SB_1k(buf);

        sb_adds(&buf, "el blocking summary:\n");
        sb_add_table(&buf, &hdr, &rows);
        sb_shrink(&buf, 1);
        logger_notice(&_G.logger, "%*pM", SB_FMT_ARG(&buf));
    } else {
        logger_notice(&_G.logger, "no blocking event");
    }
}

