const char *iop_type_get_string_desc(iop_type_t type)
{
    switch (type) {
      case IOP_T_I8:
        return "byte";
      case IOP_T_I16:
        return "short";
      case IOP_T_I32:
        return "int";
      case IOP_T_I64:
        return "long";
      case IOP_T_U8:
        return "ubyte";
      case IOP_T_U16:
        return "ushort";
      case IOP_T_U32:
        return "uint";
      case IOP_T_U64:
        return "ulong";
      case IOP_T_BOOL:
        return "bool";
      case IOP_T_ENUM:
        return "enum";
      case IOP_T_DOUBLE:
        return "double";
      case IOP_T_STRING:
        return "string";
      case IOP_T_DATA:
        return "bytes";
      case IOP_T_UNION:
        return "union";
      case IOP_T_STRUCT:
        return "struct";
      case IOP_T_XML:
        return "xml";
    }
    e_panic("iop_type unsupported");
}

