package ic;

enum IcPriority {
    LOW,
    NORMAL,
    HIGH,
};

struct Tracer {
    ulong token;
    ulong epoch;
};

struct SimpleHdr {
    string? login;
    string? password;
    string? kind;
    int     payload = -1;
    string? host;
};

abstract class Route {
};

struct RoutingHdr {
    Route route;

    int        ttl;
    IcPriority priority = IC_PRIORITY_NORMAL;
    Tracer?    tracer;
    Hdr?       originalHdr;
};

union Hdr {
    SimpleHdr      simple;
    RoutingHdr     routing;
};
